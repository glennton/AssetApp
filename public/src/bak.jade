html(ng-app="assetGenerator")
  head
    link(rel="stylesheet" , href="https://cdnjs.cloudflare.com/ajax/libs/foundation/6.3.0/css/foundation.min.css")
    link(rel="stylesheet" , href="css/styles.css")
    script(src="//localhost:35729/livereload.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.1/angular.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.0rc1/angular-route.min.js")
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.7/angular-resource.min.js")
    script(src="js/app.js")
    script(src="js/controller.js")
  body
    .row#info
      .columns
        h1 JAB Site Asset Generator
        a.button Add 1 Col Module
        a.button Add 2 Col Module
        a.button Add 3 Col Module
        a.button Save
    .row#workarea
      .columns.small-12(ng-controller="moduleInfo")
        .test(ng-repeat="siteAsset in siteAssetJson.siteAssets")
          p {{siteAsset.name}}
        .inner
          .col-info-box.col-main-info
            h3 BG Options
            form
              input(type="text" name="Link" placeholder="{{link}}")
              input(type="text" name="fname" placeholder="{{tracking}}")
              input(type="textfield" name="fname" placeholder="{{legal}}")
            .col-options
              a.button.small 1 Col  
              a.button.small 2 Col  
              a.button.small 3 Col  
          .col-info-box.col-cta-info
            h3 CTA 1
            form
              input(type="text" name="fname" placeholder="Link")
              input(type="text" name="fname" placeholder="Tracking")
            .col-options
              a.button.small.red Remove
          .clearfix    
